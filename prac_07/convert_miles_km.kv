BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            size_hint: (3, 1)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
    Button:
        text: "Convert miles to kilometres"
        on_press: app.handle_calculation(int(input_number.text))
    Label:
        id: output_label
        text: app.message
        color: (1, 1, 0, 1)